<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="5dp"
        android:text="TL·LIST"
        android:textColor="#585858"
        android:textSize="@android:dimen/app_icon_size"
        android:typeface="monospace"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/tuolajibaofei" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:id="@+id/input_user_text"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:textSize="20dp"
            android:background="@drawable/register_input"
            android:orientation="horizontal"
            android:hint=" 用户名"
            android:typeface="monospace"
            android:textCursorDrawable="@null"
            android:cursorVisible="false"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <EditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:id="@+id/input_key_text"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:textSize="20dp"
            android:orientation="horizontal"
            android:background="@drawable/register_input"
            android:textCursorDrawable="@null"
            android:hint=" 密码"
            android:typeface="monospace"
            android:cursorVisible="false"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/login_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/corners_rectangle"
            android:onClick="loginActivity"
            android:orientation="horizontal"
            android:src="@drawable/jiantou2"></ImageButton>
        </LinearLayout>

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:clickable="true"
        android:onClick="onClick"
        android:text="用户注册" />

</LinearLayout>

